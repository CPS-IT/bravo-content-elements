# Teaser:
# This element is a teaser with card layout.
#
# CType: teaser

tt_content.teaser_simple =< lib.contentElement
tt_content.teaser_simple {
  templateName = TeaserSimple
  dataProcessing {
    10 = TYPO3\CMS\Frontend\DataProcessing\FilesProcessor
    10 {
      references {
        fieldName = image
      }
      as = previewImage
    }
  }
  stdWrap {
    editIcons = tt_content: header [header_layout], records
    editIcons {
      iconTitle.data = LLL:EXT:fluid_styled_content/Resources/Private/Language/FrontendEditing.xlf:editIcon.shortcut
    }
  }
}
